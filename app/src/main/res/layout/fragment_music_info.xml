<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="MusicPackage.MusicInfoFragment"
        android:background="@color/white">

    <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/reason_to_live"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_cover" />

    <TextView
            android:id="@+id/tv_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textSize="16sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
            android:id="@+id/tv_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:textSize="16sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="@id/tv_author"
            app:layout_constraintStart_toStartOf="@id/tv_author"
            app:layout_constraintTop_toBottomOf="@id/tv_author" />

    <ImageView
            android:id="@+id/iv_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_round_play_arrow_24"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
            android:id="@+id/iv_skip_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="-1"
            android:src="@drawable/ic_round_skip_next_24"
            app:layout_constraintEnd_toStartOf="@+id/iv_play"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv_play" />

    <ImageView
            android:id="@+id/iv_skip_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_round_skip_next_24"
            app:layout_constraintStart_toEndOf="@+id/iv_play"
            app:layout_constraintBottom_toBottomOf="@+id/iv_play"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Секунда воспроизведения"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_play" />


</androidx.constraintlayout.widget.ConstraintLayout>